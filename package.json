{
  "name": "hub",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/donniean/hub#readme",
  "bugs": {
    "url": "https://github.com/donniean/hub/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donniean/hub.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "type": "module",
  "scripts": {
    "docker:ip-quality:build": "docker build --tag donniean/ip-quality ./docker/ip-quality",
    "docker:ip-quality:pull": "docker pull donniean/ip-quality",
    "docker:ip-quality:push": "docker push donniean/ip-quality",
    "docker:ip-quality:run": "docker run --name IPQuality -it --rm donniean/ip-quality",
    "preinstall": "npx only-allow npm",
    "knip": "knip",
    "knip:fix": "npm run knip -- --fix",
    "lint": "concurrently --group --timings --prefix-colors=auto \"npm:lint:*(!:fix)\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:fix": "concurrently --max-processes=1 --group --timings --prefix-colors=auto \"npm:lint:*:fix\"",
    "lint:format": "prettier --check --ignore-unknown .",
    "lint:format:fix": "prettier --write --ignore-unknown .",
    "lint:html": "htmlhint --ignore=\"**/coverage/**\" \"**/*.html\"",
    "lint:js": "eslint",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint --dot \"**/*.md\"",
    "lint:md:fix": "npm run lint:md -- --fix",
    "lint:package-json": "npm run lint:package-json:fix -- --check",
    "lint:package-json:fix": "npx sort-package-json \"**/package.json\" --ignore \"**/node_modules/**/package.json\" --ignore \"**/dist/**/package.json\"",
    "lint:spell": "cspell lint --no-progress --no-must-find-files --dot --gitignore .",
    "lint:text": "autocorrect --lint",
    "lint:text:fix": "autocorrect --fix",
    "lint:types": "tsc --noEmit",
    "ncu": "npx npm-check-updates --deep",
    "ncu:upgrade": "npm run ncu -- --upgrade",
    "prepare": "husky",
    "serve": "serve apps/playground/",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.2.7",
    "@vitest/ui": "^3.2.4",
    "autocorrect-node": "^2.14.0",
    "concurrently": "^9.2.0",
    "cspell": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.3",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "htmlhint": "^1.6.3",
    "husky": "^9.1.7",
    "knip": "^5.61.2",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.6.0",
    "serve": "^14.2.4",
    "sort-package-json": "^3.3.0",
    "stylelint": "^16.21.0",
    "stylelint-config-recess-order": "^7.1.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
